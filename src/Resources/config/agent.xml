<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="psi_object_agent.agent.doctrine_phpcr" class="Psi\Bridge\ObjectAgent\Doctrine\PhpcrOdm\PhpcrOdmAgent">
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
        </service>

        <service id="psi_object_agent.agent.doctrine_orm" class="Psi\Bridge\ObjectAgent\Doctrine\Orm\OrmAgent">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="psi_object_agent.agent_finder" class="Psi\Component\ObjectAgent\AgentFinder">
            <argument type="collection">
                <argument type="service" id="psi_object_agent.agent.doctrine_phpcr" />
                <argument type="service" id="psi_object_agent.agent.doctrine_orm" />
            </argument>
        </service>
    </services>
</container>
